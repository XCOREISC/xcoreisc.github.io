@import "__constants/variables.styl"
@import "__constants/mixins.styl"

.navbar
	width 100%
	position relative
	//min-height 25rem

span
	&.band
		 position fixed 
		 display none
		&:target + .tab div 
			opacity: 1
			background-color: darken(COLOR_GREEN,25%)
			color: COLOR_WHITE    
		&:target + .tab .navbar-content 
			background-color: darken(COLOR_GREEN,25%)
			color: #f5f5f5
			box-shadow: 0 0 5px rgba(0, 0, 0, 0.2)
			z-index: 2

.tab 
	position relative
	& div 
		background: COLOR_GREEN
		width: 100%
		position: absolute
		top: BASE_SPACE
		left: 0
		color: COLOR_WHITE
		z-index: 5
		opacity:0
		transition: all 1s ease
		padding BASE_SPACE
		&.gallery
			padding 0 0 2rem 0
			font-size 0
			& img
				width (100/3)%
				display inline-block

	& .navbar-content
		margin-top: -1.3rem
		float: left
		width: 25%
		background-color: COLOR_GREEN
		text-decoration: none
		font-size: 2rem
		color: COLOR_WHITE
		text-align: center
		position: relative
		transition: all .5s ease
 
a
	&.navbar-content:hover 
		background-color: lighten(COLOR_GREEN,50%)
		color: lighten(COLOR_WHITE,20%)
   