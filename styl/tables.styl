@import "__constants/variables.styl"
@import "__constants/mixins.styl"

.swipe 
	overflow hidden
	visibility hidden
	position relative

.swipe-wrap 
	clearfix() 
	position  relative
	& > picture
		float left
		width 20%
		position  relative
		& img 
			max-width 100%


/* END required styles */





.cronograma
	width 100%
	& dt,& dd
		text-align center
		margin 0
		display inline-block
		vertical-align top
	& dt
		background-color COLOR_WHITE
		width 20%
	& dd
		width 80%
		background-color COLOR_THEME


.schedule
	text-align center
	background-color COLOR_WHITE
	width 100%
	border-radius (BASE_SPACE/2)
	border-spacing 0
	border-collapse collapse
	empty-cells show
	& * 
		padding (BASE_SPACE/2) 0
	& th
		background-color COLOR_GREEN
	& tr 
		border-bottom 1px solid COLOR_DARK
		&:nth-child(n)
			& td
				// Todas las horas
				&:nth-child(1)
					background-color lighten(COLOR_GREEN,20)
					width 10%
				// Entrega de Materiales	
				&:nth-child(2)
					background-color COLOR_BRIGHT
		&:nth-child(2n+1)
			& td
				// Todas las horas
				&:nth-child(1)
					background-color lighten(COLOR_GREEN,40)

		//Todas Las Conferencias 
		&:nth-child(2),&:nth-child(3),&:nth-child(6),&:nth-child(7)
			& td
				&:nth-child(2),&:nth-child(3),&:nth-child(4)
					background-color COLOR_TURQUOSE
					width: 45%

		//CONFERENCIAS iGNITE
		&:nth-child(4)
			& td
				&:nth-child(2)
					background-color COLOR_THEME

		//BREAK
		&:nth-child(5)
			& td
				&:nth-child(2)
					background-color COLOR_RED

		//Talleres
		&:nth-child(6),&:nth-child(7)
			& td
				&:nth-child(3),&:nth-child(4)
					background-color COLOR_ORANGE
					width (45/2)%

		//Videoconferencia
		&:nth-child(8)
			& td
				&:nth-child(2)
					background-color COLOR_PURPLE
				&:nth-child(3)
					background-color COLOR_ORANGE

