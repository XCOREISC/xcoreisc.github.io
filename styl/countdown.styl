@import "__constants/variables.styl"
@import "__constants/mixins.styl"

#countdown
	& dt
		margin-left 1rem
		& input
			font-size 1.3rem !important
		& span
			display block
			color COLOR_WHITE
		& canvas
			box-shadow 0 0 .2rem  rgba(0, 0, 0, .5)
			border-radius 50%
			background-color rgba(0, 0, 0, .5)
		&:nth-child(1)
			margin-left  .5rem
