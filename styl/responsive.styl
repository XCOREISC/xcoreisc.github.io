@import "__constants/variables.styl"
@import "__constants/mixins.styl"

@media only screen and (min-width: 992px) 
	.navbar
		overflow hidden
		padding-top 0
	.tab
		width 50%
		float left
		& a
			margin-top 0
			text-align center
			width 100%
			display block
			z-index 2
		& >div
			opacity 1
			position: relative
			top 0
			&.place
				top 2.3rem
				padding 0 0 3rem 0
	// header 
	#showMenu
		display none
	[role="header"]
		background-image url("../images/portada/unprg.jpg")
		background-size cover 
		background-position center
		padding-bottom 15rem
		& h1, & h2
			background-color transparent
			position relative
			top 15rem
			color COLOR_DARK
			text-shadow 0 2px 1px COLOR_THEME
			margin 0 auto
			padding 0
			text-align center
		& > a
			display block
			width 10%
			float left
			margin 0
			&:nth-of-type(2)
				margin-left (60/2)%
			&:nth-of-type(3)
				width 20%

			& img 
				display block
				margin 0 auto
				width 60%
				float none
				top 4rem
				&.xcoreisc
					width auto
					top BASE_SPACE
					box-shadow 0 0 (BASE_SPACE/2) (BASE_SPACE/2) COLOR_DARK
	.menu 
		position absolute
		height 3rem 
		overflow hidden
		text-shadow none
		box-shadow none
		width 100%
		left 0
		font-size 0
		background-color rgba(0, 0, 0, .5)
		& > img
			display none
		& > a 
			display inline-block
			border-bottom  none
			width (100/6)%
			font-size BASE_SPACE
			text-align center
			color COLOR_WHITE
			& [class^="fa"],& [class*="fa"]
				display none

	#countdown
		position absolute
		top 20rem
		left 41.5%