@import "__constants/variables.styl"
@import "__constants/mixins.styl"


@media only screen and (min-width: 320px) 
	table
		& td 
			&:first-child
				& span 
					position relative !important
					background-color COLOR_WHITE
					cursor pointer
					display block
					square(4rem)
					border-radius 50%
					padding (BASE_SPACE*0.8) 0
					margin-top BASE_SPACE
					border (BASE_SPACE/2) solid COLOR_PURPLE
					&:before
						font-family FontAwesome
						content: "\f0d9"
						position absolute
						left 4rem
						margin-top -1.3rem
						font-size 4rem
						color COLOR_WHITE
					&:after
						content ""
						position absolute
						height 10rem
						//border-top (BASE_SPACE/4) solid COLOR_WHITE
						border-left (BASE_SPACE/2) solid COLOR_PURPLE
						width 4rem
						left 1.75rem
						z-index -1

@media only screen and (min-width: 992px) 
	.navbar
		overflow hidden
		padding-top 0
	.tab
		width 50%
		float left
		& a
			margin-top 0
			text-align center
			width 100%
			display block
			z-index 2
		& >div
			opacity 1
			position: relative
			top 0
			&.place
				top 2.3rem
				padding 0 0 3rem 0
	// header 
	#showMenu
		display none
	[role="header"]
		background-image url("../images/portada/unprg.jpg")
		background-size cover 
		background-position center
		padding-bottom 0
		& h1, & h2
			background-color transparent
			position relative
			top 15rem
			color COLOR_DARK
			text-shadow 0 2px 1px COLOR_THEME
			margin 0 auto
			padding 0
			text-align center
			width 30%
			background-color COLOR_GREEN
		& h2 
			&:before,&:after
				top -1rem 
				z-index 1
				border-width: 1.5rem
			&:before
				border-color: darken(COLOR_GREEN,10%) rgba(0, 0, 0, 0) darken(COLOR_GREEN,10%) darken(COLOR_GREEN,10%)  
				right -2rem
			&:after
				border-color: darken(COLOR_GREEN,10%)   darken(COLOR_GREEN,10%)   darken(COLOR_GREEN,10%) rgba(0, 0, 0, 0) 
				left -2rem
		& > a
			display block
			width 10%
			float left
			margin 0
			&:nth-of-type(2)
				margin-left (60/2)%
			&:nth-of-type(3)
				width 20%
			& img 
				display block
				margin 0 auto
				width 80%
				float none
				top 4rem
				&.xcoreisc
					width 80%
					top BASE_SPACE
					box-shadow 0 0 (BASE_SPACE/2) (BASE_SPACE/2) COLOR_DARK
	.menu 
		position absolute
		height 3rem 
		overflow hidden
		text-shadow none
		box-shadow none
		width 100%
		left 0
		font-size 0
		background-color rgba(0, 0, 0, .5)
		& > img
			display none
		& > a 
			display inline-block
			border-bottom  none
			width (100/6)%
			font-size BASE_SPACE
			text-align center
			color COLOR_WHITE
			& [class^="fa"],& [class*="fa"]
				display none

	#countdown
		position absolute
		top 20rem
		left 24.5%
		& input
			text-shadow 0 1px 1px black
		& span
			position: relative
			top -55px
			font-weight bold
			text-shadow 0 1px 1px black


@media only screen and (min-width: 1200px) 
	[role="header"]
		& > a
			& img 
				width 60%
				&.xcoreisc
					width 60%
	#countdown
		left 30%
@media only screen and (min-width: 1440px) 
	[role="header"]
		& > a
			& img 
				width 40%
				&.xcoreisc
					width 40%
	#countdown
		left 32.5%
