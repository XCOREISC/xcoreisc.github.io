@import "__constants/variables.styl"
@import "__constants/mixins.styl"

@media only screen and (min-width: 320px) 
	.lg-logos
		background-image url("images/portada/unprg-sm.jpg")
		min-height 258px
@media only screen and (min-width: 480px) 
	.lg-logos
		background-image url("images/portada/unprg-md.jpg")
		min-height 277px
@media only screen and (min-width: 768px) 
	.lema
		margin 10rem 10rem 5rem 10rem
	.pasos
		& > li 
			width: (100/3)%
			float left
			& div 
				width 76%
	.cronograma
		table
			background-color transparent
			display table
			padding 1rem 
			& td 
				display table-cell !important
				width auto !important
				border-radius (BASE_SPACE/4)
				&:first-child
					background-color transparent
					& span 
						position relative !important
						background-color COLOR_WHITE
						cursor pointer
						display block
						square(4rem)
						border-radius 50%
						padding (BASE_SPACE*0.8) 0
						border (BASE_SPACE/2) solid COLOR_THEME
						&:before
							font-family FontAwesome
							content: "\f0d9"
							position absolute
							left 3.5rem
							margin-top -1.3rem
							font-size 4rem
							color COLOR_THEME
						&:after
							content ""
							position absolute
							height 12rem
							border-left (BASE_SPACE/2) solid COLOR_THEME
							width 4rem
							left 1.2rem
							z-index -1
				&:nth-child(2),&:nth-child(3),&:nth-child(4)
					border-left none !important
					border-bottom none !important
			& tr 
				display table-row
				border-bottom none
				font-size BASE_SPACE
				&:nth-child(6)
					& td:nth-child(1)
						top 0
				/**************** Conferencias ************************/
				&:nth-child(2) td:nth-child(2),
				&:nth-child(3) td:nth-child(2),
				&:nth-child(6) td:nth-child(2),
				&:nth-child(7) td:nth-child(2),
				&:nth-child(8) td:nth-child(2)
					actividad(true,false,false,false)
				/**************** Protocolo ************************/
				&:nth-child(1) td:nth-child(2),
				&:nth-child(5) td:nth-child(2),
				&:nth-child(9) td:nth-child(2)
					actividad(false,true,false,false)
				/******************* IGNITE ***************************/
				&:nth-child(4) td:nth-child(2)
					&:after
						margin-top -2rem
						color COLOR_RED
						top auto
						right 1.5rem 
						text-shadow none
						cursor pointer
					actividad(false,false,true,false)
				/***************** taLLERES ***************************/
				&:nth-child(6) td:nth-child(3),
				&:nth-child(6) td:nth-child(4)
					actividad(false,false,false,true)
				&:nth-child(6) td:nth-child(4)
					& > div
						padding 6.9rem 0
				&:nth-child(9) td:first-child
					& span 
						&:after
							border-left none

	#Expositores
		& img 
			border-radius 50%
			border .2rem solid COLOR_ORANGE
		& > div
			margin-top BASE_SPACE

@media only screen and (min-width: 992px)

	.lg-logos
		position: absolute
		top 7rem
		background transparent
		width: 100%
	img
		&.xcoreisc
			square(8rem)
		&.unprg
			left 100%
			square(5rem)
		&.apeisc
			right 100%
			square(5rem)
			left auto

	.cronograma.margin-top
		margin-top 0
	.navbar
		clearfix() 
		padding-top 0
		& .band 
			display none
			z-index -2 !important
		& .tab
			width 50%
			float left
			& > a
				display none
			& >div
				opacity 1
				position: relative
				top 0
				&.info,&.place
					min-height 18rem
				&.place
					& #map-unprg
						min-height 15rem
			&:first-of-type:before,&:nth-of-type(2):before,&:nth-of-type(3):before,&:nth-of-type(4):before
				content ""
				font-family: "FontAwesome"
				font-size 2rem
				color COLOR_WHITE
				text-align center
				width 100%
				display block
				background-color COLOR_THEME
			&:nth-of-type(2):before
				content ""
			&:nth-of-type(3):before
				content ""
			&:nth-of-type(4):before
				content ""


	// header 
	#showMenu
		display none
	[role="header"]
		background-image url("../images/portada/unprg.jpg")
		background-size cover 
		background-position center
		padding-bottom 0
		& h1, & h2
			background-color transparent
			position relative
			top 4rem
			color COLOR_WHITE
			text-shadow 0 2px 1px COLOR_DARK
			margin 0 auto
			text-align center
			width 30%
			background-color COLOR_GREEN
			border-radius .2rem .2rem 0 0
		& h1 
			&:before,&:after
				content ""
				position absolute
				border-style: solid
				border-width: BASE_SPACE
				top 1.5rem
				z-index -1
			&:before
				border-color: darken(COLOR_GREEN,10%) rgba(0, 0, 0, 0) darken(COLOR_GREEN,10%) darken(COLOR_GREEN,10%)  
				right -2rem
			&:after
				border-color: darken(COLOR_GREEN,10%)   darken(COLOR_GREEN,10%)   darken(COLOR_GREEN,10%) rgba(0, 0, 0, 0) 
				left -2rem
	.menu 
		position absolute
		height 3rem 
		overflow hidden
		text-shadow none
		box-shadow none
		width 100%
		left 0
		font-size 0
		background-color rgba(0, 0, 0, .5)
		& > img
			display none
		& > a 
			display inline-block
			border-bottom  none
			width (100/6)%
			font-size BASE_SPACE
			text-align center
			color COLOR_WHITE
			& [class^="fa"],& [class*="fa"]
				display none
	#showSocial
		display none
	.social
		width 20rem
		background-color transparent
		top 3rem
		right 0
		&>a 
			square(2.7rem)
			padding .2rem
			background-color rgba(0, 0, 0, .5)
			border-radius 50%
			&:hover
				& .fa-facebook
					color #3b5998
				& .fa-twitter
					color #00aced
				& .fa-youtube
					color #bb0000
				& .fa-pinterest
					color #cb2027
				& .fa-foursquare
					color #0072b1
				& .fa-google-plus
					color #dd4b39
			
@media only screen and (min-width: 1200px) 
	&.xcoreisc
		text-align left
	&.unprg,&.apeisc
		text-align left

@media only screen and (min-width: 1440px) 
	[role="header"]
		& > a
			& img 
				width 40%
				&.xcoreisc
					width 40%
