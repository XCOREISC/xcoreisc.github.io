@import "__constants/variables.styl"
@import "__constants/mixins.styl"

.cronograma
	display block
	& h2, time
		display block
		text-align center
	& h2
		padding (BASE_SPACE/2) 0
		background-color COLOR_PURPLE
		color COLOR_WHITE
	& time
		padding (BASE_SPACE/4) 0
		background-color darken(COLOR_PURPLE,50%)
		color COLOR_WHITE

	& table
		text-align center
		border-spacing 0
		border-collapse collapse
		empty-cells show
		& tr
			border-bottom none
			&:nth-child(6),&:nth-child(8)
				& td:nth-child(3) 
					border-left (BASE_SPACE/5) solid darken(COLOR_PURPLE,50%)

		& td
			&:first-child
				color COLOR_WHITE
				& span 
					background-color COLOR_PURPLE
					display block
					square(4rem)
					border-radius 50%
					padding BASE_SPACE
					margin-top BASE_SPACE
			&:nth-child(2)
				padding 0 BASE_SPACE
				& div
					padding BASE_SPACE 0
					color COLOR_DARK
					background-color COLOR_WHITE
					border-radius (BASE_SPACE/4)
					margin-top BASE_SPACE


