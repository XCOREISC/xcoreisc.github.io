	background-color COLOR_WHITE
	clearfix() 
	& figure
		padding .5rem 0
		text-align center
		&:first-child
			content ""
			background-color rgba(155, 89, 182,.3)
		&:nth-child(2)
			content ""
			background-color rgba(22, 160, 133,.3)
		&:nth-child(3)
