@import "__constants/mixins.styl"

.cronograma
	display block
	& h2, time
		display block
		text-align center
	& h2
		padding (BASE_SPACE/2) 0
		background-color COLOR_PURPLE
		color COLOR_WHITE
	& time
		padding (BASE_SPACE/4) 0
		background-color darken(COLOR_PURPLE,50%)
		color COLOR_WHITE
	& table
		text-align center
		display block
		background-color COLOR_WHITE
		& tr 
			display: block
			font-size 0
			border-bottom 0.1rem dotted COLOR_PURPLE
			&:first-child td:nth-child(2),&:nth-child(5) td:nth-child(2),&:last-child td:nth-child(2)
				background-color rgba(52, 152, 219,.3)
			&:nth-child(2) td:nth-child(2), &:nth-child(3) td:nth-child(2), &:nth-child(6) td:nth-child(2)
			&:nth-child(7) td:nth-child(2), &:nth-child(8) td:nth-child(2)
				background-color rgba(155, 89, 182,.3)
			&:nth-child(4) td:nth-child(2)
				background-color rgba(231, 76, 60,.3) 
				position relative
				&:after
					font-family "FontAwesome"
					content: "\f055"
					color COLOR_WHITE 
					text-shadow 0 0 2px COLOR_DARK
					position absolute
					font-size 2rem
					top 0
					right .5rem
			&:nth-child(6)
				& td
					&:nth-child(1)
						position relative
						top 3.5rem
					&:nth-child(2),&:nth-child(3)
						border-bottom 0.1rem dotted COLOR_PURPLE
					&:nth-child(3),&:nth-child(4)
						margin-left 15%
					&:nth-child(3),&:nth-child(4)
						display block
						background-color rgba(22, 160, 133,.2)
					&:nth-child(3)
						&:after
							content "Culmina a las 18:00hrs"
							color COLOR_PURPLE
					&:nth-child(4)
						&:after
							content "Culmina a las 19:30hrs"
							color COLOR_PURPLE
					&:nth-child(2),&:nth-child(3),&:nth-child(4)
						border-left 0.1rem dotted COLOR_PURPLE
		& td
			padding (BASE_SPACE/2) 0
			font-size BASE_SPACE
			&:first-child
				color COLOR_PURPLE
				display inline-block
				width 15%
			&:nth-child(2)
				display inline-block
				width 85%
				border-left 0.1rem dotted COLOR_PURPLE

