@import "__constants/variables.styl"
@import "__constants/mixins.styl"

picture 
	& img
		max-width 100%
	&.img-speaker
		& img 
			border-radius 50%
			block-center()
			square(6rem)
			border 0.2rem dotted COLOR_ORANGE
img
	&.responsive
		max-width 100%
	&.portada
		padding 0
		border-radius (BASE_SPACE/4)
		border (BASE_SPACE/4) solid COLOR_WHITE
	&.xcoreisc
		position relative
		display block
		margin 0 auto
		border-radius 50%
		width 5.5rem
		border .2rem solid COLOR_DARK
		top 1rem

	&.unprg,&.apeisc
		top 1rem
		position: absolute
		left 30%
		square(3rem)
		padding .1rem
		border-radius 50%
		background-color COLOR_WHITE
		border .1rem solid COLOR_DARK

.block-center
	block-center()
/************************** WIDTH ***********************/
.w100
	width 100%
/************************ borders ************************/
.xs-radius
	border-radius .25rem
/**************** TEXT *************************************/
.text-center
	text-align center
.text-justify
	text-align center
.text-bold
	font-weight bold
/**************** colors ********************************/
.bck-sky-blue
	background-color COLOR_SKY_BLUE
.bck-theme
	background-color COLOR_THEME
.bck-theme-second
	background-color COLOR_THEME_SECOND
	color COLOR_WHITE
.bck-white
	background-color COLOR_WHITE
	color COLOR_DARK
.bck-green
	background-color COLOR_GREEN
.bck-orange
	background-color COLOR_ORANGE
.bck-dark
	background-color COLOR_DARK
.bck-dark-2
	background-color darken(COLOR_DARK,80%)
.bck-glass
	background-color darken(COLOR_THEME,30%)
	border-radius (BASE_SPACE/2)

.color-orange
	color COLOR_ORANGE
.color-white
	color COLOR_WHITE
.color-theme
	color COLOR_THEME
.color-theme-second
	color COLOR_THEME_SECOND
.color-dark
	color COLOR_DARK
.color-sky-blue
	color COLOR_SKY_BLUE


/***************** MARGINS, PADDINGS ********/

.margin-none  
	margin: 0

.margin  
	margin:  BASE_SPACE
.margin-2  
	margin:  BASE_SPACE*2

.margin-left  
	margin-left:  BASE_SPACE

.margin-right  
	margin-right:  BASE_SPACE

.margin-top  
	margin-top:  BASE_SPACE

.margin-top-2  
	margin-top:  BASE_SPACE*2

.margin-top-3  
	margin-top:  BASE_SPACE*3

.margin-top-4  
	margin-top:  BASE_SPACE*4

.margin-top-6  
	margin-top:  BASE_SPACE*6

.margin-bottom  
	margin-bottom:  BASE_SPACE

.margin-bottom-2  
	margin-bottom:  BASE_SPACE*2

.margin-bottom-4  
	margin-bottom:  BASE_SPACE*4


.padding-none  
	padding: 0
.padding  
	padding:  BASE_SPACE

.padding-small  
	padding: (BASE_SPACE/2 )

.padding-left  
	padding-left:  BASE_SPACE

.padding-right  
	padding-right:  BASE_SPACE

.padding-top  
	padding-top:  BASE_SPACE

.padding-bottom  
	padding-bottom:  BASE_SPACE

.padding-top-2  
	padding-top:  BASE_SPACE*2

.padding-bottom-2  
	padding-bottom:  BASE_SPACE*2

.padding-top-4  
	padding-top:  BASE_SPACE*4

.padding-bottom-4  
	padding-bottom:  BASE_SPACE*4

/****************** figures *************************/
.subtitle
	display block
	color COLOR_WHITE 
	text-align center
	padding (BASE_SPACE/2) 0

/***********************  XCOREISC ************************************/
.lg-logos
	background-image url("../images/portada/unprg-xs.jpg")
	background-size cover 
	background-position center
	min-height 221px
.button-nav
	background-color COLOR_DARK !important
	left wNav !important
.video-container
	position relative
	padding-bottom 56.25%
	padding-top 30px
	height 0
	overflow hidden
	& iframe
		position: absolute
		top 0
		left 0
		width 100%
		height 100%
mark
	display block
	block-center()
	padding .5rem 1rem
	background-color COLOR_THEME_SECOND
	color COLOR_WHITE
	font-weight bold
.precio-plan-1,.precio-plan-2
	border .2rem solid COLOR_THEME_SECOND
	border-radius .25rem
	& h3
		color COLOR_WHITE
		padding .25rem 0
	& span
		display block
		margin .5rem 0
		text-align center
	& p 
		text-align center
.precio-plan-1
	margin 1rem .5rem 0 1rem
.precio-plan-2
	margin 1rem 1rem 0 .5rem 
.no-border
	border-right none
.lema
	margin 8rem 1rem 0 1rem
	background-color rgba(0, 0, 0, .5)
	border-radius 0.25rem
	color COLOR_WHITE
	text-align center
	padding .5rem 1rem 
.time,.full-day
	position: relative
	margin-top 1.5rem 
	margin-bottom .5rem 
	background-color rgba(0, 0, 0, .5)
	border-radius 0 .25rem .25rem 0
	display block
	padding  .5rem 0 .5rem 1rem 
	color COLOR_WHITE
	& span
		font-size 1.5rem 	
	& time
		margin-left .5rem
		font-weight bold
		text-align center
	& p 
		margin-right .5rem
		display inline-block
.full-day
	padding  .5rem 1rem .5rem  0
	border-radius .25rem  0 0 .25rem 
	text-align right
.pasos
	list-style: none
	& > li 
		clearfix()
		position: relative
		width: 100%
		font-size 0
		margin-top 1rem
		& >span
			font-size 1.5rem
			square(3rem)
			position: relative
			background-color COLOR_WHITE
			border .2rem solid COLOR_THEME_SECOND
			display inline-block
			border-radius 50%
			vertical-align middle
			padding-top .5rem
			&:after
				font-family FontAwesome
				content: "\f0d9"
				position absolute
				font-size 4rem
				color COLOR_THEME_SECOND
				right -1.4rem
				top -.7rem

		& >div
			font-size 1rem
			width 80%
			position: relative
			display inline-block
			left 1rem
			border .2rem solid COLOR_THEME_SECOND
			border-radius .25rem
			vertical-align middle
			& >p
				text-align center
				padding 1.5rem 0

.fix-float
	overflow hidden

#Expositores
	& h3
		padding .5rem 0
		text-align center
		text-transform uppercase
	& p 
		min-height 7rem 
		padding 0 1rem
	&> div
		clearfix() 
		border-bottom 0.1rem solid COLOR_THEME_SECOND
	& picture
		padding-top .5rem
		padding-left 1rem
		& img 
			display block
			border-radius .25rem
			border .2rem solid COLOR_THEME_SECOND
.share
	width 100%
	position: absolute
	height 0
	&> div
		position: relative
		top -2rem