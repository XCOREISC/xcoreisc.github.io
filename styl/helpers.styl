@import "__constants/variables.styl"
@import "__constants/mixins.styl"

picture 
	& img
		max-width 100%
	&.img-speaker
		& img 
			border-radius 50%
			block-center()
			square(6rem)
			border 0.2rem dotted COLOR_ORANGE
img
	&.responsive
		max-width 100%
	&.portada
		padding 0
		border-radius (BASE_SPACE/4)
		border (BASE_SPACE/4) solid COLOR_WHITE
	&.xcoreisc
		position relative
		display block
		margin 0 auto
		border-radius 50%
		width 5.5rem
		border .2rem solid COLOR_DARK
		top 1rem

	&.unprg,&.apeisc
		top 1rem
		position: absolute
		left 30%
		square(3rem)
		padding .1rem
		border-radius 50%
		background-color COLOR_WHITE
		border .1rem solid COLOR_DARK

.block-center
	block-center()
/************************** WIDTH ***********************/
.w100
	width 100%
/************************ borders ************************/
.radius-small
	border-radius (BASE_SPACE/4)
/**************** TEXT *************************************/
.text-center
	text-align center
.text-justify
	text-align center

.text-bold
	font-weight bold
/**************** colors ********************************/
.bck-sky-blue
	background-color COLOR_SKY_BLUE
.bck-theme
	background-color COLOR_THEME

.bck-white
	background-color COLOR_WHITE
	color COLOR_DARK
.bck-green
	background-color COLOR_GREEN
.bck-orange
	background-color COLOR_ORANGE
.bck-dark
	background-color COLOR_DARK
.bck-dark-2
	background-color darken(COLOR_DARK,80%)
.bck-glass
	background-color darken(COLOR_THEME,30%)
	border-radius (BASE_SPACE/2)

.color-orange
	color COLOR_ORANGE
.color-white
	color COLOR_WHITE
.color-theme
	color COLOR_THEME
.color-dark
	color COLOR_DARK
.color-sky-blue
	color COLOR_SKY_BLUE


/***************** MARGINS, PADDINGS ********/

.margin-none  
	margin: 0

.margin  
	margin:  BASE_SPACE
.margin-2  
	margin:  BASE_SPACE*2

.margin-left  
	margin-left:  BASE_SPACE

.margin-right  
	margin-right:  BASE_SPACE

.margin-top  
	margin-top:  BASE_SPACE

.margin-top-2  
	margin-top:  BASE_SPACE*2

.margin-top-3  
	margin-top:  BASE_SPACE*3

.margin-top-4  
	margin-top:  BASE_SPACE*4

.margin-top-6  
	margin-top:  BASE_SPACE*6

.margin-bottom  
	margin-bottom:  BASE_SPACE

.margin-bottom-2  
	margin-bottom:  BASE_SPACE*2

.margin-bottom-4  
	margin-bottom:  BASE_SPACE*4


.padding-none  
	padding: 0
.padding  
	padding:  BASE_SPACE

.padding-small  
	padding: (BASE_SPACE/2 )

.padding-left  
	padding-left:  BASE_SPACE

.padding-right  
	padding-right:  BASE_SPACE

.padding-top  
	padding-top:  BASE_SPACE

.padding-bottom  
	padding-bottom:  BASE_SPACE

.padding-top-2  
	padding-top:  BASE_SPACE*2

.padding-bottom-2  
	padding-bottom:  BASE_SPACE*2

.padding-top-4  
	padding-top:  BASE_SPACE*4

.padding-bottom-4  
	padding-bottom:  BASE_SPACE*4

/****************** figures *************************/
.subtitle
	display block
	color COLOR_WHITE 
	text-align center
	padding (BASE_SPACE/2) 0

/***********************  XCOREISC ************************************/
.border-precio
	border .2rem solid COLOR_THEME
.bck-blue 
	background-color #293863
.lg-logos
	background-image url("../images/portada/unprg-xs.jpg")
	background-size cover 
	background-position center
	min-height 221px
.border-right 
	border-right .1rem solid COLOR_SKY_BLUE
.button-nav
	background-color COLOR_DARK !important
	left wNav !important
.hr-orange
	border-bottom 0.1rem solid lighten(COLOR_ORANGE,50%) 

.video-container
	position relative
	padding-bottom 56.25%
	padding-top 30px
	height 0
	overflow hidden
	& iframe
		position: absolute
		top 0
		left 0
		width 100%
		height 100%
mark
	display block
	block-center()
	padding .5rem 1rem
	background-color lighten(COLOR_THEME,70%)
	color COLOR_THEME
	font-weight bold
	border-radius .2rem
.pago 
	& li 
		margin-top BASE_SPACE
.precio-unidad
	display: block
	block-center()
	square(4.5rem)
	padding-top 1.2rem
	border-radius 50%
	border .2rem dotted COLOR_SKY_BLUE
.lema
	margin 10rem 1rem
	background-color rgba(0, 0, 0, .75)
	border-radius 0.25rem
	color COLOR_WHITE
	text-align center
	padding .5rem 1rem 
#Expositores
	& h3
		padding .5rem 0
		text-align center
		text-transform uppercase
	& p 
		min-height 7rem 
		padding 0 1rem
	&> div
		clearfix() 
		border-bottom 0.1rem solid COLOR_THEME
	& picture
		padding-top .5rem
		padding-left 1rem
		& img 
			display block
			border-radius .25rem
			border .2rem solid COLOR_THEME