*
	box-sizing  border-box
	&:before,&:after 
		box-sizing  border-box
img
	display block
	margin 1% auto;
@css{
	body{
		
		background: #ffffff; /* Old browsers */
		background: -moz-radial-gradient(center, ellipse cover, #ffffff 0%, #89898a 100%); /* FF3.6+ */
		background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,#ffffff), color-stop(100%,#89898a)); /* Chrome,Safari4+ */
		background: -webkit-radial-gradient(center, ellipse cover, #ffffff 0%,#89898a 100%); /* Chrome10+,Safari5.1+ */
		background: -o-radial-gradient(center, ellipse cover, #ffffff 0%,#89898a 100%); /* Opera 12+ */
		background: -ms-radial-gradient(center, ellipse cover, #ffffff 0%,#89898a 100%); /* IE10+ */
		background: radial-gradient(ellipse at center, #ffffff 0%,#89898a 100%); /* W3C */
	}
	
}